{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/menu.css') }}">
{% endblock %}

{% block title %}Notre Menu{% endblock %}

{% block body %}
<div class="menu-container">
  <h1 class="menu-title">üçΩÔ∏è  <span>Menu</span></h1>

  {% for section in menu %}
    <div class="menu-section">
      <h2 class="section-title">{{ section.section }}</h2>
      <div class="menu-items">
        {% for item in section.items %}
          <div class="menu-card">
            <img src="{{ asset('images/' ~ item.image) }}" alt="{{ item.name }}" class="menu-image">
            <div class="menu-info">
              <h3 class="menu-name">{{ item.name }}</h3>
              <p class="menu-description">{{ item.description }}</p>
              <p class="menu-price">{{ item.price }} ‚Ç¨</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
